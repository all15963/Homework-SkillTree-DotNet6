<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCHomework6</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCHomework6.styles.css" asp-append-version="true" />
    @if (IsSectionDefined("Head"))
    {
        @await RenderSectionAsync("Head")
    }
    else
    {
        
    }
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">MVCHomework6</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="CreateBlog" asp-controller="Create" asp-action="Index">Create</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <div class="row">
        <div class="col-8">
            @RenderBody()
        </div>
        <div class="col">
            <div class="card mb-1">
                <div class="card-header">
                    Search
                </div>
                <div class="card-body">
                    <form asp-action="KeywordList" asp-controller="Home" asp-area="" method="get">
                        <div class="input-group mb-3">
                            <input type="text" name="keyword" class="form-control" placeholder="Search for...">
                            <button class="btn btn-outline-secondary">Go!</button>
                        </div>
                    </form>
                </div>
            </div>
            <cache expires-after="TimeSpan.FromSeconds(5)">
                <vc:tag-cloud></vc:tag-cloud>
            </cache>
            <div class="card mb-1">
                <div class="card-header">
                    Google Search
                </div>
                <div class="card-body">
                    <script async src="https://cse.google.com/cse.js?cx=c2098778bcd7c6ede"></script>
                    <div class="gcse-searchbox-only" data-resultsUrl="@Url.Action("Index", "Home", new { area="GoogleSearch" })"></div>
                </div>
            </div>
        </div>
    </div>
</div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MVCHomework6 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
