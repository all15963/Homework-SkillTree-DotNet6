@{
}
@model IEnumerable<MVCHomework6.Models.TagCloudViewModel>

<div class="card mb-1">
                <div class="card-header">
                    Tags
                </div>
                <div class="card-body">
                    <ul class="list-inline">
                        @foreach (var item in Model)
                        {
                            <li class="list-inline-item">
                                <a class="btn" asp-action="Index" asp-controller="Home" asp-area="" asp-route-tag="@item.Tag">
                                    @item.Tag
                                    <span class="badge bg-secondary">@item.Count</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>